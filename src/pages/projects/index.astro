<Layout title='EmoPorEmilio'>
  <div class='grid w-full px-8 grid-cols-2 max-w-[600px] gap-2'>
    <h1 class='col-span-2 text-primary-300 font-light text-3xl'>Products</h1>
    <div
      class='place-items-center col-span-2 md:p-10 p-4 rounded-xl border border-primary-700 bg-bg-200 hover:bg-bg-300'>
      <img src='images/projects/proyecto-viviana.png' />
    </div>
    <div
      class='place-items-center grid col-span-1 md:p-10 p-4 rounded-xl border border-primary-700 bg-bg-200 hover:bg-bg-300'>
      <img class='object-contain' src='images/projects/pokebro.png' />
    </div>
    <div
      class='place-items-center col-span-1 md:p-10 p-4 rounded-xl border border-primary-700 bg-bg-200 hover:bg-bg-300 max-w-[200px]'>
      <img class='object-contain' src='images/projects/lol-uy.png' />
    </div>
    <div
      class='place-items-center col-span-1 md:p-10 p-4 rounded-xl border border-primary-700 bg-bg-200 hover:bg-bg-300 w-full'>
      <img class='object-contain' src='images/projects/emoporemilio.png' />
    </div>
    <div
      class='place-items-center col-span-1 md:p-10 p-4 rounded-xl border border-primary-700 bg-bg-200 hover:bg-bg-300 w-full'>
