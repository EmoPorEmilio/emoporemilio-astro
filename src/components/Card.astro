---
interface Props {
  title: string;
  author: string;
  date: string;
}

const { title, author, date } = Astro.props;
---

<div class='flex w-full max-w-[1000px] flex-col px-4'>
  <span
    class='relative left-8 top-5 bg-gradient-to-b from-primary-100 to-primary-500 bg-clip-text text-2xl md:text-4xl font-bold text-transparent drop-shadow-title-card'>
    {title}
  </span>
  <div
    class='flex h-[46px] flex-col justify-end rounded-t-[26px] bg-primary-800'>
    <div
      class='flex h-[40px] flex-col justify-end rounded-t-[30px] bg-primary-600'>
      <div
        class='flex h-[20px] items-center justify-end rounded-t-[100px] bg-primary-700 pr-4'>
        <span class='font-regular text-sm text-primary-300'>
          <span class='font-semibold'>{author}</span>
          -
          {date}
        </span>
      </div>
    </div>
  </div>
  <div
    class='mt-1 flex flex-col rounded-b-[26px] rounded-t-lg border-b border-b-accent-500 bg-bg-300'>
    <div class='flex flex-1 flex-col p-4 font-sen text-lg text-gray-100'>
      <slot class='' />
    </div>
  </div>
</div>
<div class='relative bottom-4 right-4'>
  <div class='flex flex-row justify-end gap-2 pr-4'></div>
</div>

<style></style>
